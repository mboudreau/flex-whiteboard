<languageVersion : 1.0;>

kernel FloatR
<   namespace : "testing";
    vendor : "Apache";
    version : 1;
    description : "Float with default.";
>
{
    input image4 src;
    output pixel4 dst;

    parameter float theFloat
    <
        minValue:float(0);
        maxValue:float(1);
        defaultValue:float(0);
    >;

    void
    evaluatePixel()
    {
        float4 inputColor = sampleNearest(src, outCoord());
        dst.r = inputColor.r + theFloat;
        dst.g = inputColor.g;
        dst.b = inputColor.b;
        dst.a = inputColor.a;
    }
}
