<languageVersion : 1.0;>

kernel FloatR
<   namespace : "testing";
    vendor : "Apache";
    version : 1;
    description : "Pixel2 without default.";
>
{
    input image4 src;
    output pixel4 dst;

    parameter pixel2 thePixel
    <
        minValue:pixel2(0,0);
        maxValue:pixel2(1,1);
    >;

    void
    evaluatePixel()
    {
        float4 inputColor = sampleNearest(src, outCoord());
        dst.r = inputColor.r + thePixel.r;
        dst.g = inputColor.g + thePixel.g;
        dst.b = inputColor.b;
        dst.a = inputColor.a;
    }
}
